# SiliconFlow
SILICONFLOW_API_KEY=
SILICONFLOW_MODEL=deepseek-ai/DeepSeek-V3

# OpenRouter（多模型聚合）
OPENROUTER_API_KEY=
OPENROUTER_MODEL=google/gemma-3-12b-it:free

# Cerebras（超高速推理）
CEREBRAS_API_KEY=
CEREBRAS_MODEL=llama-3.1-8b

# 默认 LLM 提供商
DEFAULT_PROVIDER=qwen

# ===== 阿里云服务 =====

# 阿里云 ASR（语音识别）
